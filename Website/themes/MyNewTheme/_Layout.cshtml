@{
    string next = Blog.GetNextPage();
    string prev = Blog.GetPrevPage();
}
<!doctype html>
<html lang="en-us">
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8" />
    <title>@Page.Title</title>
    <meta name="description" content="@Page.Description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />

    <link type="application/rsd+xml" rel="edituri" title="RSD" href="~/views/robots/rsd" />
    <link type="application/rss+xml" rel="alternate" title="@Blog.Title" href="~/feed/rss/" />
    <link type="application/atom+xml" rel="alternate" title="@Blog.Title" href="~/feed/atom/" />

    <link rel="stylesheet" href="@Blog.FingerPrint("/Content/bootstrap.css", "//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Blog.FingerPrint("/themes/" + Blog.Theme + "/site.css")" />
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Michroma" rel="stylesheet">
    <link rel="shortcut icon" href="@Blog.FingerPrint("/favicon.ico")" type="image/x-icon" />
    <link rel="dns-prefetch" href="http://gravatar.com/" />

    @AdminCss()

    <meta name="application-name" content="@Blog.Title" />
    <meta name="msapplication-TileColor" content="#ffffff" />

    <meta property="og:title" content="@Page.Title" />
    <meta property="og:image" content="@Blog.Image" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(Request.Url.Scheme +"://" + Request.Url.Authority + Request.RawUrl)" />
    @if (!string.IsNullOrEmpty(prev))
    {
        <link rel="prev" href="@prev" />
    }
    @if (!string.IsNullOrEmpty(next))
    {
        <link rel="next" href="@next" />
    }
</head>
<body itemscope itemtype="http://schema.org/Blog" class="@(User.Identity.IsAuthenticated ? "admin": null)">

    <div class="container">
        <header role="banner">
            <span style="font-family: 'Michroma', sans-serif;"><a href="~/" itemprop="url">@Blog.Title</a></span><br />
            <em style="font-family: 'Michroma', sans-serif;">@Blog.Description</em><br />
            <span style="font-family: 'Indie Flower', cursive;">Because you can't build bricks without clay</span>
        </header>

        <div role="main" class="col-md-8">
            @RenderBody()

            @if (Page.ShowPaging != null)
            {
                <ul class="pager">
                    @if (Blog.GetPosts().Count() > Blog.PostsPerPage * Blog.CurrentPage)
                    {
                        <li class="previous"><a href="@Blog.GetPagingUrl(1)" rel="prev">&larr; &AElig;ldre</a></li>
                    }

                    @if (Blog.CurrentPage > 1)
                    {
                        <li class="next"><a href="@Blog.GetPagingUrl(-1)" rel="next">Nyere &rarr;</a></li>
                    }
                </ul>
            }
        </div>

        <aside role="complementary" class="col-md-4">
            <div class="well">
                <h3>Why this?</h3>
                <p>Welcome to my little corner on the internet.</p>
                <p>This blog is in Danish and is primarily made to allow me, to share knowledge with my colleagues at <a href="//www.itelligence.dk" target="_blank">itelligence Nordic</a> but also to help me remember stuff.</p>
                <p>You are welcome to read along, but do note that views, expressions and rants is entirely on my own.</p>
                <p>Also – use at your own risk, do not held me responsible for any bad tips &amp; tricks.</p>
            </div>
            <div class="well">
                <h3>Categories</h3>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            @for (int index1 = 0; index1 <= (Blog.GetCategories().Count / 2)-1; index1++)
                            {
                                var item1 = Blog.GetCategories().ElementAt(index1);
                                <li class="small">
                                    <a href="~/category/@HttpUtility.UrlEncode(item1.Key.ToLowerInvariant())">@item1.Key (@item1.Value)</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            @for (int index2 = Blog.GetCategories().Count / 2; index2 <= Blog.GetCategories().Count-1; index2++)
                            {
                                var item2 = Blog.GetCategories().ElementAt(index2);
                                <li class="small">
                                    <a href="~/category/@HttpUtility.UrlEncode(item2.Key.ToLowerInvariant())">@item2.Key (@item2.Value)</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="well">
                <h3>F&aring; en mail</h3>
                <p>Du kan nu også f&aring; en email, hver gang der kommer et nyt indl&aelig;g på denne blog</p>
                <p><a href="https://feedburner.google.com/fb/a/mailverify?uri=tttotw&amp;loc=da_DK" target="_blank">Klik blot her</a> for at abonnere,</p>
                <p></p>
            </div>
            <div class="well">
                <h3>Find mig andre steder</h3>
                <ul>
                    <li><a href="https://www.linkedin.com/in/verakso/" target="_blank">LinkedIN</a></li>
                    <li><a href="https://twitter.com/verakso" target="_blank">Twitter</a></li>
                    <li><a href="https://people.sap.com/verakso" target="_blank">SAP Profile</a></li>
                    <li><a href="https://public.tableau.com/profile/verakso#!/" target="_blank">Tableau Public</a></li>
                    <li><a href="https://github.com/Verakso" target="_blank">GitHub</a></li>
                </ul>
            </div>
        </aside>
    </div>

    <footer class="text-center" role="contentinfo" itemscope itemtype="http://schema.org/Person" itemprop="author">
        @if (!User.Identity.IsAuthenticated)
        {
            <span class="pull-right">
                <a href="@FormsAuthentication.LoginUrl?ReturnUrl=@Request.RawUrl">Sign in <i class="glyphicon glyphicon-log-in"></i></a>
            </span>
        }
        <span>
            Copyright &copy; @Blog.FirstPostYear &ndash; @DateTime.Now.Year
            <a href="http://about.me/verakso" itemprop="url name">Thomas V. Nielsen</a>
        </span>
    </footer>


    @if ((Blog.CurrentPost != null && Blog.CurrentPost.AreCommentsOpen(Context)) || Blog.IsNewPost)
    {
        <script src="@Blog.FingerPrint("/scripts/comments.js")" async defer></script>
    }

    @if (User.Identity.IsAuthenticated)
    {
        @RenderPage("~/views/AdminMenu.cshtml")
    }
    <!-- Google Analytics Script -->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-100903935-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>

@helper AdminCss()
{
if (User.Identity.IsAuthenticated)
{
        <link href="@Blog.FingerPrint("/Content/admin.css")" rel="stylesheet" />
}
}
